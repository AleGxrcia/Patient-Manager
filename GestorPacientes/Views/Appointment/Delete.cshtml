@model GestorPacientes.Core.Application.ViewModels.Appointment.SaveAppointmentViewModel

@{
    ViewData["Title"] = "Borrar Cita";
}
<div class="container mt-5">
    <div class="border rounded-3 p-4 mt-4 text-center bg-white">
        <h3 class="mb-3">¿Esta seguro que desea eliminar esta cita?</h3>

        <form asp-controller="Appointment" asp-action="DeleteAppointment">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">Borrar</button>
            <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
        </form>
    </div>
</div>
