@using GestorPacientes.Core.Application.ViewModels.LaboratoryTests
@model List<LaboratoryTestViewModel>
@{
    ViewData["Title"] = "Pruebas de laboratorio";
}

<div class="container">
    <h1 class="">Pruebas de laboratorio</h1>
    <a asp-controller="LaboratoryTest" asp-action="Create" class="btn btn-primary-custom m-3">
        <i class="bi bi-plus-circle-fill"></i>
        Agregar Prueba
    </a>
    <div class="border rounded-3 card-box-shadow bg-white p-4 mt-4">
        <table class="table table-hover">
            <thead class="fw-bold fs-4">
                <tr>
                    <th>Nombre</th>
                    <th class="text-end">Opciones</th>
                </tr>
            </thead>
            <tbody class="table-group-divider">
                @foreach (LaboratoryTestViewModel labTest in Model)
                {
                    <tr>
                        <td class="py-3 fs-6">
                            @labTest.Name
                        </td>
                        <td class="text-end align-items-center py-3">
                            <a class="btn btn-secondary btn-sm" asp-controller="LaboratoryTest" asp-action="Edit" asp-route-id=@labTest.Id>
                                <i class="bi bi-pencil-square"></i>
                                Editar
                            </a>
                            <a class="btn btn-danger btn-sm" asp-controller="LaboratoryTest" asp-action="Delete" asp-route-id=@labTest.Id>
                                <i class="bi bi-trash-fill"></i>
                                Eliminar
                            </a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

    </div>
</div>