@model GestorPacientes.Core.Application.ViewModels.Patients.SavePatientViewModel

@{
    bool editMode = Model.Id == 0 ? false : true;
    ViewData["Title"] = "Guardar paciente";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mt-3">
            <div class="card-header" style="background-color: #00F0BE">
                <h4>@(editMode ? $"Editando paciente: {Model.FirstName} {Model.LastName}" : "Registrando un nuevo paciente")</h4>
            </div>
            <div class="card-body">
                <form method="post" enctype="multipart/form-data" asp-asp-controller="Patient" asp-action="@(editMode ? "Edit":"Create")">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="FirstName" class="form-label"></label>
                                <input type="text" asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="LastName" class="form-label"></label>
                                <input type="text" asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Phone" class="form-label"></label>
                        <input type="tel" asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Address" class="form-label"></label>
                        <input type="text" asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="IdNumber" class="form-label"></label>
                                <input type="text" asp-for="IdNumber" class="form-control" />
                                <span asp-validation-for="IdNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DateBirth" class="form-label"></label>
                                <input asp-for="DateBirth" class="form-control" />
                                <span asp-validation-for="DateBirth" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label asp-for="File" class="form-label"></label>
                        @if (editMode)
                        {
                            <input asp-for="File" class="form-control" />
                        }
                        else
                        {
                            <input required asp-for="File" class="form-control" />
                        }
                        <span asp-validation-for="File" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-3" style="user-select: none;">
                        <input type="checkbox" class="form-check-input" asp-for="IsSmoker" />
                        <label class="form-check-label" asp-for="IsSmoker"></label>
                    </div>
                    <div class="form-check mb-3" style="user-select: none;">
                        <input type="checkbox" class="form-check-input" asp-for="HasAllergies" />
                        <label class="form-check-label" asp-for="HasAllergies"></label>
                    </div>
                    <div class="d-flex justify-content-end">
                    <button class="btn btn-primary me-2">Guardar</button>
                    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
