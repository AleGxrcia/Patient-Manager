@using GestorPacientes.Core.Application.ViewModels.LaboratoryResult
@using GestorPacientes.Core.Application.ViewModels.LaboratoryTests
@model SaveLaboratoryResultViewModel

@{
    bool editMode = Model.Id == 0 ? false : true;
    ViewData["Title"] = "Reportar resultados";
}

<div class="row">
    <div class="col-6 offset-3">
        <div class="card mt-3">
            <div class="card-header" style="background-color: #00F0BE">
                <h4>@(editMode ? $"Reportando resultado de la prueba " : "Registrando nueva Prueba de Laboratorio")</h4>
            </div>
            <div class="card-body">
                <form asp-asp-controller="LaboratoryResult" asp-action="@(editMode ? "ReportResult":"Create")">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="AppointmentId"/>

                    <div class="mb-3">
                        <label asp-for="Resultado" class="form-label"></label>
                        <textarea required asp-for="Resultado" class="form-control"></textarea>
                        <span asp-validation-for="Resultado" class="text-danger"></span>
                    </div>

                    <button class="btn btn-primary">Finalizar</button>
                    <a class="btn btn-secondary" asp-action="Index">Cancelar</a>

                </form>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}